<Window x:Class="KomisJanusz.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:KomisJanusz"
        mc:Ignorable="d"
        Title="Aplikacja obsługi komisu" Height="550" Width="800" WindowStartupLocation="CenterScreen" Initialized="OnInitialized">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <Menu x:Name="PasekMenu" Grid.Row="0" MinHeight="22" Padding="4" Foreground="Gray">
            <MenuItem Header="Opcje" BorderThickness="1" BorderBrush="Gray" Padding="4">
                <MenuItem Header="Test"/>
                <MenuItem Header="Test1"/>
                <MenuItem Header="Test2"/>
            </MenuItem>
        </Menu>

        <StatusBar x:Name="PasekStatusu" Grid.Row="2" MinHeight="22" Padding="2">
            <TextBlock x:Name="TekstPasekStatusu" />
        </StatusBar>

        <Grid Grid.Row="1">
            <Grid.Background>
                <ImageBrush ImageSource="Resources/typowy_mirek.jpg" Opacity="0.8"/>
            </Grid.Background>
        </Grid>
    </Grid>
</Window>
